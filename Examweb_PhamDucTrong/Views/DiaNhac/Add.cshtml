@model DiaNhac

<div>
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="TuaCD" class="control-label">Tựa CD</label>
            <input asp-for="TuaCD" class="form-control" />
            <span asp-validation-for="TuaCD" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NgheSi" class="control-label">Nghệ sĩ</label>
            <input asp-for="NgheSi" class="form-control" />
            <span asp-validation-for="NgheSi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TrongNuoc" class="control-label">Trong nước</label>
            <input asp-for="TrongNuoc" class="form-control" />
            <span asp-validation-for="TrongNuoc" class="form-check"></span>
        </div>
        <div class="form-group">
            <label asp-for="GiaBan" class="control-label">giá bán</label>
            <input asp-for="GiaBan" class="form-control" />
            <span asp-validation-for="GiaBan" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SoLuong" class="control-label">Số lượng</label>
            <input asp-for="SoLuong" class="form-control" />
            <span asp-validation-for="SoLuong" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </form>

</div>
